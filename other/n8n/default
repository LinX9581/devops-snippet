server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  
  server_name  n8n.linx.blog;

  ssl_certificate /etc/nginx/ssl/linx-website.crt;
  ssl_certificate_key /etc/nginx/ssl/linx-website.key;

  access_log /var/log/nginx/n8n.linx.website_ssl-access.log;
  error_log /var/log/nginx/n8n.linx.website_ssl-error.log;

	location / {
		proxy_pass http://127.0.0.1:5678;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;          # 傳遞客戶端真實 IP
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for; # 傳遞完整的 IP 鏈
    proxy_set_header X-Forwarded-Proto $scheme;       # 傳遞協議（http/https）
	}
}
